
<% if (isAdmin) {%>
<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">

<body class="d-flex flex-column min-vh-100">

<%- include('../includes/navigation.ejs') %>




<div class="container my-4" style="border-radius: 8px;padding: 8px;max-width: 100%;width: 40%;border:1px solid black;direction: rtl">
    <h1 class="h4 mb-3">افزودن خدمت جدید</h1>
    <form action="/admin/add-provider" method="post">
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="name" class="form-label">نام</label>
                <input type="text" class="form-control" id="name" name="name" maxlength="150" required>
            </div>

            <div class="col-12 col-md-6">
                <label for="type" class="form-label">نوع</label>
                <select class="form-select" dir="rtl" id="type" name="type"  required>
                    <option value="">انتخاب نوع</option>
                    <option value="restaurant">رستوران</option>
                    <option value="laundry">خشکشویی</option>
                    <option value="other">سایر</option>
                </select>
            </div>

            <div class="col-12 col-md-6">
                <label for="owner_user_id" class="form-label">مالک خدمات</label>
                <select class="form-select" dir="rtl" id="owner_user_id" name="owner_user_id"  required>
                    <option value="">انتخاب کنید</option>
                    <% for (let i=0 ; i < providers_owner.length ; i++ )  { %>
                    <option value="<%=providers_owner[i].id%>"><%=providers_owner[i].full_name%></option>
                    <% } %>
                </select>
            </div>

            <div class="col-12 col-md-6">
                <label for="city_id" class="form-label">شهر</label>
                <select class="form-select" dir="rtl" id="city_id" name="city_id"  required>
                    <option value="">انتخاب شهر</option>
                    <% for (let i=0 ; i < cities.length ; i++ )  { %>
                        <option value="<%=cities[i].id%>"><%=cities[i].name%></option>
                    <% } %>
                </select>
            </div>

            <div >
                <label for="address" class="form-label">آدرس</label>
                <input type="text" class="form-control" id="address" name="address" maxlength="255">
            </div>

            <div>
                <label for="imageurl" class="form-label">عکس</label>
                <input type="text" class="form-control" id="imageurl" name="imageurl">
            </div>

            <div >
                <label for="description" class="form-label">توضیحات</label>
                <textarea class="form-control" id="description" name="description" rows="3"></textarea>
            </div>

            <div class="form-check form-switch mb-3">
                <div class="d-flex justify-content-start row-reverse align-items-end">
                    <label class="form-check-label" for="is_active">فعال باشد؟</label>
                    <input class="form-check-input" type="checkbox" id="is_active" name="is_active" checked>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-1">
            <button type="submit" class="btn btn-primary">ثبت خدمت</button>
        </div>
    </form>
</div>



<%- include('../includes/end.ejs') %>
<% } else { %>
    <h2>فقط ادمین ها به این بخش دسترسی دارند بزودی به صفحه اصلی منتقل میشوید</h2>

    <script>
        setTimeout(()=>{
            window.location.replace('/')
        },4000)
    </script>
<% }%>